<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/p_c">

    <ImageView
        android:id="@+id/backImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/main_back"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/emerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/emer_but" />

    <ImageView
        android:id="@+id/fireImgBut"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/fire_but"

        android:layout_alignLeft="@+id/emerButton"
        android:layout_alignStart="@+id/emerButton"
        android:layout_marginTop="90dp" />

    <ImageView
        android:id="@+id/ambulanceBut"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ambulance_but" />

    <ImageView
        android:id="@+id/policeImgBut"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/emerButton"
        android:layout_alignRight="@+id/emerButton"
        app:srcCompat="@drawable/police_but"
        android:layout_marginTop="90dp"
        />

    <ImageView
        android:id="@+id/whiteback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emerButton"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/white_back" />

    <ImageView
        android:id="@+id/info_butImg"
        android:layout_width="50dp"
        android:layout_height="50dp"

        app:srcCompat="@drawable/info_but"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/whiteback"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/emerButton"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/settingsImgbut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/settings_but"
        android:layout_marginRight="90dp"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/whiteback"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/emerButton" />

</RelativeLayout>
